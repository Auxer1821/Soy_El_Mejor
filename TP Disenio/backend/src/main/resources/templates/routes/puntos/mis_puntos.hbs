{{#partial "contenido"}}
    <div class="container py-5">
        {{#if error}}
            <div class="alert alert-danger text-center" role="alert">
                {{this}}
            </div>
        {{/if}}

        <div class="border-0 rounded-4 p-4 text-center w-50 mx-auto text-dark">
            <div class="d-flex align-items-center justify-content-center">
                <img class="points-icon img-fluid" src="/img/puntos.png" alt="Icono de puntos" style="width: 60px; height: 60px;">
                <p class="fs-3 fw-bold ms-3">Mis puntos: {{user.puntosAdquiridos}}</p>
            </div>
        </div>


        <h2 class="fs-4 fw-bold text-center mt-4">{{titulo}}</h2>

        <div class="mt-4">
            {{#each canjes}}
                <div class="card mb-3 shadow-sm p-3 border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Fecha: {{this.fecha}}</h5>
                        <p class="card-text"><strong>Canje:</strong> {{this.nombre_producto}}</p>
                        <p class="card-text"><strong>Beneficio adquirido:</strong> {{this.id_beneficio}}</p>
                        <p class="card-text"><strong>Puntos totales:</strong> {{this.puntos_producto}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{/partial}}

{{> base }}
