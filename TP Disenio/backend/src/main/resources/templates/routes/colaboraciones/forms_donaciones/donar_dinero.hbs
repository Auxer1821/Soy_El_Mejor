{{#partial "contenido"}}
    <div class="d-flex justify-content-center align-items-center flex-grow-1 w-100 min-vh-100">
        <div class="d-flex container my-5 min-vh-100 mb-5 shadow p-3 bg-white rounded">
            <div class="d-flex container-fluid justify-content-center align-items-center">
                <img class="img-fluid" src="/img/dinero.png"  alt="">
            </div>
            <div class="d-flex justify-content-center align-items-center flex-column w-100">
                <h2 class="mb-5">Donar Dinero</h2>
                <div class="w-75">
                    {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            {{this.error}}
                        </div>
                    {{/if}}
                    <!-- Modal -->
                    {{#if status}}
                        <div class="alert alert-success" role="alert">
                            La donación se ha realizado exitosamente.
                            ¡Gracias por su colaboración!
                        </div>
                    {{/if}}
                    <form method="POST" action="/colaboraciones/donar-dinero">
                        <div class="form-group mb-2">
                            <label for="monto" class="form-label">Monto</label>
                            <input name="monto" type="number" class="form-control" id="monto" required>
                        </div>
                        <div class="form-group mb-2">
                            <label for="frecuencia" class="form-label">Frecuencia</label>
                            <select class="form-select" id="frecuencia" name="frecuencia" required>
                                <option value="">Seleccione...</option>
                                <option value="unico">UNICO</option>
                                <option value="mensual">MENSUAL</option>
                            </select>
                        </div>
                        <div class="w-100 text-center">
                            <button type="submit" class="btn btn-primary w-75">Donar Dinero</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> base}}