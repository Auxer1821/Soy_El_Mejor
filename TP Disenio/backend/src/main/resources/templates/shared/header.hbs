<header class="position-relative z-2 container-fluid px-3 py-2">
  <div class="row text-center align-items-center">
    <div class="col-6 col-lg-2 text-start">
      <a href="/">
        <img class="img-fluid rounded w-50" src="/img/logo.png" alt="Logo" style="max-width: 100px;" />
      </a>
    </div>

    {{#if user.rol}}
    <nav class="d-none d-lg-flex col-lg-8 justify-content-start gap-4 fs-5">
      <a href="/inicio" class="nav-link fw-bold">Inicio</a>
      <a href="/historia" class="nav-link">Sobre nosotros</a>
      <a href="/mapa-heladeras" class="nav-link">Heladeras</a>
      <a href="/beneficios" class="nav-link">Beneficios</a>
        {{#ifNotEquals user.rol 'HUMANA'}}
            <a href="/reportes-semanales" id="reportesBtn" class="nav-link">Reportes semanales</a>
        {{/ifNotEquals}}
    </nav>

    <div class="col-6 col-lg-2 d-flex justify-content-end">
      <div class="btn-group">
        <button
          type="button"
          class="btn btn-primary dropdown-toggle"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <img class="img-fluid" src="/img/usuario_boton_desplegable.png" alt="Persona" style="max-width: 30px;" />
        </button>
          <ul class="dropdown-menu dropdown-menu-end custom-dropdown font-family-dropdown">
              {{#with user}}
                  <li><h5 id="username-display" class="text-center">{{this.username}}</h5></li>
                  <li><hr class="dropdown-divider" /></li>
                  <li class="d-flex align-items-center">
                      <img class="img-fluid me-2" src="/img/usuario_boton_desplegable.png" alt="Profile" style="max-width: 20px;" />
                      <a class="dropdown-item" href="#">Perfil</a>
                  </li>
                  <li class="d-flex align-items-center">
                      <img class="img-fluid me-2" src="/img/puntos_boton_desplegable.png" alt="Points" style="max-width: 20px;" />
                      <a class="dropdown-item" href="/mis-puntos">Mis puntos</a>
                  </li>
                  <li><hr class="dropdown-divider" /></li>
                  <li class="d-flex align-items-center">
                      <img class="img-fluid me-2" src="/img/cerrar_sesion_menu_desplegable.png" alt="Logout" style="max-width: 20px;" />
                      <a class="dropdown-item" href="/cerrar-sesion">Cerrar sesión</a>
                  </li>
              {{/with}}
          </ul>
      </div>
    </div>
    {{else}}
        <div class="col-6 col-lg-10 d-flex justify-content-end" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
            </ul>
            <div class="d-flex">
                <a href="/login" class="btn btn-primary me-2">Iniciar sesión</a>
                <a href="/registrarse" class="btn btn-outline-info">Crear cuenta</a>
            </div>
        </div>
    {{/if}}
  </div>
</header>
